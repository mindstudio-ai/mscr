{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mscr.mindstudio.ai/ActionDefinition",
  "title": "ActionDefinition",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "v1"
    },
    "kind": {
      "type": "string",
      "const": "Action"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "serviceId": {
      "type": "string",
      "minLength": 1
    },
    "active": {
      "type": "boolean"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "quickHelp": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "name",
        "quickHelp"
      ],
      "additionalProperties": false
    },
    "configuration": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "collapsed": {
            "type": "boolean"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "required": {
                  "type": "boolean"
                },
                "helpText": {
                  "type": "string",
                  "default": ""
                },
                "variable": {
                  "type": "string",
                  "minLength": 1
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "text",
                    "outputVariableName",
                    "select"
                  ]
                },
                "placeholder": {
                  "type": "string"
                },
                "defaultValue": {
                  "type": "string"
                },
                "selectOptions": {
                  "type": "object",
                  "properties": {
                    "options": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "label": {
                            "type": "string"
                          },
                          "value": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "label",
                          "value"
                        ],
                        "additionalProperties": false
                      },
                      "minItems": 1
                    }
                  },
                  "required": [
                    "options"
                  ],
                  "additionalProperties": false
                },
                "textOptions": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "default",
                        "multiline",
                        "markdown"
                      ],
                      "default": "default"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "required": [
                "label",
                "variable",
                "type"
              ],
              "additionalProperties": false
            },
            "minItems": 1
          }
        },
        "required": [
          "title",
          "items"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": [
    "apiVersion",
    "kind",
    "id",
    "serviceId",
    "active",
    "metadata",
    "configuration"
  ],
  "additionalProperties": false
}