{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mscr.mindstudio.ai/ServiceDefinition",
  "title": "ServiceDefinition",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "v1"
    },
    "kind": {
      "type": "string",
      "const": "ServiceDefinition"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "icon": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "name",
        "icon"
      ],
      "additionalProperties": false
    },
    "configuration": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": [
              "apiKey",
              "plaintext",
              "bearerToken"
            ]
          },
          "managed": {
            "type": "boolean"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "default": ""
          },
          "placeholder": {
            "type": "string",
            "default": ""
          }
        },
        "required": [
          "id",
          "type"
        ],
        "additionalProperties": false
      },
      "default": []
    }
  },
  "required": [
    "apiVersion",
    "kind",
    "id",
    "metadata"
  ],
  "additionalProperties": false
}